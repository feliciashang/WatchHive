{
    "manifest_version": 3,
    "name": "WatchHive",
    "version": "1.0.0",
    "description": "A simple React app as a Chrome extension",
    "action": {
        "default_title": "Open Side Panel"
    },
    "permissions": [
        "scripting",
        "sidePanel",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
      },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
      }
}